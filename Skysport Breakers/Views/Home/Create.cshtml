<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h3>REGISTRATION FOR JUNIOR BREAKER</h3>

<div class="row">
    <div class="col-md-9">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PName" class="control-label"></label>
                <input asp-for="PName" class="form-control" />
                <span asp-validation-for="PName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PEmail" class="control-label"></label>
                <input asp-for="PEmail" class="form-control" />
                <span asp-validation-for="PEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PAddress" class="control-label"></label>
                <input asp-for="PAddress" class="form-control" />
                <span asp-validation-for="PAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PPhoneNumber" class="control-label"></label>
                <input asp-for="PPhoneNumber" class="form-control" />
                <span asp-validation-for="PPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PHomeNumber" class="control-label"></label>
                <input asp-for="PHomeNumber" class="form-control" />
                <span asp-validation-for="PHomeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CName" class="control-label"></label>
                <input asp-for="CName" class="form-control" />
                <span asp-validation-for="CName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CAge" class="control-label"></label>
                <input asp-for="CAge" class="form-control" />
                <span asp-validation-for="CAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CDOB" class="control-label"></label>
                <input asp-for="CDOB" class="form-control" />
                <span asp-validation-for="CDOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CGender" class="control-label"></label>
                <select asp-for="CGender">
                    <option selected disabled> --- Gender --- </option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Gender Diverse</option>
                </select>
                <span asp-validation-for="SkillLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkillLevel" class="control-label"></label>
                <select asp-for="SkillLevel">
                    <option selected disabled> --- Select Skill Level --- </option>
                    <option>Beginneer</option>
                    <option>Intermediate</option>
                    <option>Advanced</option>
                </select>
                <span asp-validation-for="SkillLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
            @Html.ViewData["Message"]
        <a href="@Url.Action("JBhome","Home")" class="w3-bar-item w3-button w3-wide">Go back to Junior Breaker Home Page</a>
        </form>
    </div>
</div>


