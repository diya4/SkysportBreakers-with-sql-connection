<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skysport_Breakers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    <header>
           <nav class="navbar navbar-expand-lg navbar-light bg-light  ">
               <a href="@Url.Action("Index","Home")" class="w3-bar-item w3-button w3-wide">
               <img src="~/Images/LogoBlack.png" alt="Boss" style="width:200px; height:50px;"></a>
               <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#coll">
                   <span class="navbar-toggler-icon"></span>
               </button>
               <div class="collapse navbar-collapse" id="coll">
                   <ul class="navbar-nav">
                       <li class="nav-item dropdown">
                           <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                               <i class="fa fa-user"></i><i class="fa fa-user"></i><i class="fa fa-user"></i>
                               Team <i class="fa fa-caret-down"></i>
                           </a>
                           <div class="dropdown-menu">
                               <ul>
                                   <li>
                                       <a href="@Url.Action("TeamPage","Home")" class="w3-bar-item w3-button">Team</a>
                                   </li>
                                   <li>
                                       <a href="@Url.Action("Coaches","Home")" class="w3-bar-item w3-button">Coaches and Support Staff</a>
                                   </li>
                                   <li>
                                       <a href="@Url.Action("Stats","Home")" class="w3-bar-item w3-button">Statistics</a>
                                   </li>
                               </ul>
                           </div>
                       </li>
                       <li class="nav-item dropdown">
                           <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>Membership <i class="fa fa-caret-down"></i></a>
                           <div class="dropdown-menu">
                               <ul>
                                   <li>
                                       <a href="@Url.Action("Membership","Home")" class="w3-bar-item w3-button">Membership</a>
                                   </li>
                                   <li>
                                       <a href="@Url.Action("MemberBenifits", "Home")" class="w3-bar-item w3-button">Member Benifits</a>
                                   </li>
                                   <li>
                                       <a href="@Url.Action("MemberUseful","Home")" class="w3-bar-item w3-button">Useful Information</a>
                                   </li>
                               </ul>
                           </div>
                       </li>
                       <li class="nav-item">
                           <a href="@Url.Action("merchHP","Home")" class="w3-bar-item w3-button"><i class="fa fa-th"></i> Merchandise</a>
                       </li>
                       <li class="nav-item">
                           <a href="@Url.Action("ContactPage","Home")" class="w3-bar-item w3-button"><i class="fa fa-envelope"></i> Contact</a>
                       </li>
                       <li class="nav-item">
                           <a href="@Url.Action("Privacy","Home")" class="w3-bar-item w3-button"><i class="fa fa-lock"></i> Privacy</a>
                       </li>
                       <li class="nav-item">
                           <a asp-area="Identity" asp-page="/Account/Login" class="w3-bar-item w3-button"><i class="fa fa-user"></i> Login/Register</a>
                       </li>
                   </ul>
                   <!--partial layout for logged in user-->
                   <partial name="_LoginPartial" />
               </div>
           </nav>
    </header>

    <br /><br /><br /><br /><br><br>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="w3-center w3-black w3-padding-64">
        <div class="w3-xlarge w3-section">
            <i class="fa fa-facebook-official w3-hover-opacity"></i>
            <i class="fa fa-instagram w3-hover-opacity"></i>
            <i class="fa fa-twitter w3-hover-opacity"></i>
            <i class="fa fa-twitch w3-hover-opacity"></i>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)


</body>
</html>
