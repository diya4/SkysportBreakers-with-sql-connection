                    <li class="nav-item">
                        <a href="@Url.Action("JBMembership","Home")" class="w3-bar-item w3-button"> Membership</a>
                    <li class="nav-item">
                        <a href="@Url.Action("JBCamp","Home")" class="w3-bar-item w3-button"> Camps</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("JBSkills","Home")" class="w3-bar-item w3-button"> Saturday Skills</a>
