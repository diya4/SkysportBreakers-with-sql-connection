@using Microsoft.AspNetCore.Identity
@using Skysport_Breakers.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
    <style>
        /* Right-aligned section inside the top navigation */
        .topnav-right {
            float: right;
        }
    </style>

    <div class="topnav-right">
        <ul class="navbar-nav">
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                </li>
                <li class="nav-item">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                    <div class="w3-dropdown-hover w3-hide-small">
                        <button class="w3-button" title="Notifications"> <i class="fa fa-user"></i>Manage<i class="fa fa-caret-down"></i></button>
                        <div class="w3-dropdown-content w3-card-4 w3-bar-block">
                            <a href="@Url.Action("CreateRole","Administration")" class="w3-bar-item w3-button"><i class="fa fa-user"></i> Create role</a>
                            <a href="@Url.Action("ListRoles","Administration")" class="w3-bar-item w3-button"><i class="fa fa-user"></i> List role</a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>

